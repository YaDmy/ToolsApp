<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CalculatorActivity">

    <TextView
        android:id="@+id/tv_calculator"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="@string/calculator"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_calc"
        app:layout_constraintTop_toBottomOf="@id/tv_calculator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/grey_background"
        android:padding="15dp"
        android:textSize="25sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:columnCount="4"
        android:padding="10dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/clear"
            style="@style/CalculatorButtonStyle"
            android:text="C" />
        <TextView
            android:id="@+id/btn7"
            style="@style/CalculatorButtonStyle"
            android:text="7" />

        <TextView
            android:id="@+id/btn8"
            style="@style/CalculatorButtonStyle"
            android:text="8" />

        <TextView
            android:id="@+id/btn9"
            style="@style/CalculatorButtonStyle"
            android:text="9" />

        <TextView
            android:id="@+id/btnAdd"
            style="@style/CalculatorButtonStyle"
            android:text="+" />

        <TextView
            android:id="@+id/btn4"
            style="@style/CalculatorButtonStyle"
            android:text="4" />

        <TextView
            android:id="@+id/btn5"
            style="@style/CalculatorButtonStyle"
            android:text="5" />

        <TextView
            android:id="@+id/btn6"
            style="@style/CalculatorButtonStyle"
            android:text="6" />

        <TextView
            android:id="@+id/btnMultiply"
            style="@style/CalculatorButtonStyle"
            android:text="*" />

        <TextView
            android:id="@+id/btn1"
            style="@style/CalculatorButtonStyle"
            android:text="1" />

        <TextView
            android:id="@+id/btn2"
            style="@style/CalculatorButtonStyle"
            android:text="2" />

        <TextView
            android:id="@+id/btn3"
            style="@style/CalculatorButtonStyle"
            android:text="3" />

        <TextView
            android:id="@+id/btnSubtract"
            style="@style/CalculatorButtonStyle"
            android:text="-" />

        <TextView
            android:id="@+id/btn0"
            style="@style/CalculatorButtonStyle"
            android:text="0" />

        <TextView
            android:id="@+id/btnDecimal"
            style="@style/CalculatorButtonStyle"
            android:text="." />

        <TextView
            android:id="@+id/btnDivide"
            style="@style/CalculatorButtonStyle"
            android:text="/" />

        <TextView
            android:id="@+id/btnEquals"
            style="@style/CalculatorButtonStyle"
            android:text="=" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>